<p id="notice"><%= notice %></p>

<h1>Listing Movie Reqs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Director</th>
      <th>Actor1</th>
      <th>Actor2</th>
      <th>Actor3</th>
      <th>Releaseyr</th>
      <th>Rating</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_reqs.each do |movie_req| %>
      <tr>
        <td><%= movie_req.title %></td>
        <td><%= movie_req.genre %></td>
        <td><%= movie_req.director %></td>
        <td><%= movie_req.actor1 %></td>
        <td><%= movie_req.actor2 %></td>
        <td><%= movie_req.actor3 %></td>
        <td><%= movie_req.releaseyr %></td>
        <td><%= movie_req.rating %></td>
        <td><%= movie_req.description %></td>
        <td><%= link_to 'Show', movie_req %></td>
        <td><%= link_to 'Edit', edit_movie_req_path(movie_req) %></td>
        <td><%= link_to 'Destroy', movie_req, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

