<div id="container">
		<h1><%= @movie.title %></h1>

		<h3>
		<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
		</h3>
		
<p id="notice"><%= notice %></p>

	<div class="row">
			<div class="col-md-4">
				<img src= "" />
			</div>
			<div class="col-md-8">
			<p><%= @movie.description %></p>
			<ul>
				<li>Directed by <%= @movie.director %></li>
				<li>Starring <%= @movie.actor1 %>, <%= @movie.actor2 %>, and <%= 		@movie.actor3 %></li>
				<li>Released <%= @movie.releaseyr %></li>
				<li>Genre: <%= @movie.genre %></li>
			</ul>
			</div>
	</div>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<h2>Comments</h2>
<% @movie.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
  <p>
  <%= link_to 'Delete Comment', [@movie, comment],
               :confirm => 'Are you sure?',
               :method => :delete %>
</p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@movie, @movie.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', index_path %>
