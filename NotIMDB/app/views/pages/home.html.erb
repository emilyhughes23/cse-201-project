			<% end %>

			
			<% movie = Movie.find(32) %>
			<%= link_to movie_path(movie.id), class:"movieCard col-md-4" do%>			
				<h3><%= movie.title %></h3>
				<img src="http://ia.media-imdb.com/images/M/MV5BMTUyMTE0ODcxNF5BMl5BanBnXkFtZTgwODE4NDQzNTE@._V1_SY317_CR2,0,214,317_AL_.jpg">
			<% end %>
		</div>

		<div class="row">

			<% movie = Movie.find(17) %>
			<%= link_to movie_path(movie.id), class:"movieCard col-md-4" do%>
				<h3><%= movie.title %></h3>
				<img src="http://ia.media-imdb.com/images/M/MV5BMTkwNzAwNDA4N15BMl5BanBnXkFtZTgwMTA2MDcwNzE@._V1_SX214_AL_.jpg">
			<% end %>


			<% movie = Movie.find(28) %>
			<%= link_to movie_path(movie.id), class:"movieCard col-md-4" %>
				<h3><%= movie.title %></h3>
				<img src="http://ia.media-imdb.com/images/M/MV5BODU4MjU4NjIwNl5BMl5BanBnXkFtZTgwMDU2MjEyMDE@._V1_SX214_AL_.jpg">
			<% end %>

			
			<% movie = Movie.find(13) %>
			<%= link_to movie_path(movie.id), class:"movieCard col-md-4" do%>
				<h3><%= movie.title %></h3>
				<img src="http://ia.media-imdb.com/images/M/MV5BMjExMDUzODE1N15BMl5BanBnXkFtZTgwNTU5NTYxMTE@._V1_SX214_AL_.jpg">
			<% end %>
		</div>
	</div>

	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../../../vendor/assets/javascripts/bootstrap.min.js"></script>
  </body>
</html>
