<!DOCTYPE html>
<html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Not IMDB</title>
    
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
	
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  
  <body>
  <div class="container">
      
	<div id="container">
		<h1>Featured Movies</h1>

		<div class="row">
			<div class="col-sm-6">
				<button class="btn btn-primary sort-filter-btn" type="button" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseExample">
				  Filter by...
				</button>
				<div class="collapse" id="collapseFilter">
					<div class="well row">
					<div class="dropdown col-sm-6">
					  <button class="btn btn-default dropdown-toggle" type="button" id="filterGenre" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Genre
						<span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" aria-labelledby="filterGenre">
						<li><a href="#">Action</a></li>
						<li><a href="#">Adventure</a></li>
						<li><a href="#">Animated</a></li>
						<li><a href="#">Comedy</a></li>
						<li><a href="#">Drama</a></li>
						<li><a href="#">Romance</a></li>
						<li><a href="#">Sci-Fi</a></li>
					  </ul>
					</div>
					<div class="dropdown col-sm-6">
					  <button class="btn btn-default dropdown-toggle" type="button" id="filterRating" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Rating
						<span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" aria-labelledby="filterRating">
						<li><a href="#">1/5</a></li>
						<li><a href="#">2/5</a></li>
						<li><a href="#">3/5</a></li>
						<li><a href="#">4/5</a></li>
						<li><a href="#">5/5</a></li>
					  </ul>
					</div>
				  </div>
				</div>
			</div>

			<div class="col-sm-6">
				<button class="btn btn-primary sort-filter-btn" type="button" data-toggle="collapse" data-target="#collapseSort" aria-expanded="false" aria-controls="collapseExample">
				  Sort by...
				</button>
				<div class="collapse" id="collapseSort">
					<div class="well row">
					<div class="dropdown col-sm-6">
					  <button class="btn btn-default dropdown-toggle" type="button" id="sortAlphabetical" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Alphabetical
						<span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" aria-labelledby="sortAlphabetical">
						<li><a href="#">A to Z</a></li>
						<li><a href="#">Z to A</a></li>
					  </ul>
					</div>
					<div class="dropdown col-sm-6">
					  <button class="btn btn-default dropdown-toggle" type="button" id="sortRating" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Rating
						<span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" aria-labelledby="sortRating">
						<li><a href="#">High to Low</a></li>
						<li><a href="#">Low to High</a></li>
					  </ul>
					</div>
				  </div>
				</div>
			</div>
		</div>

		<div class="row">
			<% movie = Movie.find(1) %>
			<%= link_to movie_path(movie.id), class:"movieCard col-md-4" do%>
				<h3><%= movie.title %></h3>
				<img src="http://ia.media-imdb.com/images/M/MV5BMTMyNzI4OTA5OV5BMl5BanBnXkFtZTcwMDQ2MjAxNA@@._V1_SX640_SY720_.jpg">
			<% end %>

			<% movie = Movie.find(2) %>
